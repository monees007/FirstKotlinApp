<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:textSize="240sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.452" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/next_button"
            android:layout_width="104dp"
            android:layout_height="74dp"
            android:backgroundTint="#235652"
            android:text="@string/next_button"
            android:textColor="#97F9F0"
            android:theme="@style/Widget.AppCompat.Button.Borderless.Colored" />

        <Button
            android:id="@+id/toast_button"
            android:layout_width="104dp"
            android:layout_height="74dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="#235652"
            android:text="@string/toast_button"
            android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#97F9F0" />

        <Button
            android:id="@+id/random_button"
            android:layout_width="104dp"
            android:layout_height="74dp"
            android:background="#235652"
            android:text="@string/random_button"
            android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textColor="#97F9F0" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>